<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:background="#cbcccb"
    tools:context="it.polito.did.ragnatela.MenuActivity">

    <LinearLayout
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/first_byte_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="192"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="." />

        <EditText
            android:id="@+id/second_byte_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="168"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="." />

        <EditText
            android:id="@+id/third_byte_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="1"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="." />

        <EditText
            android:id="@+id/fourth_byte_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="32"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":" />

        <EditText
            android:id="@+id/host_port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="8080"
            android:inputType="number" />

    </LinearLayout>
   <!-- <Button
        android:layout_centerVertical="true"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:layout_margin="30dp"
        android:id="@+id/start_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Game"
        android:textSize="30sp"/>-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/logo"
            android:id="@+id/imageView"
            android:layout_weight="0.7"
            android:layout_marginTop="30dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3">


            <Button
                android:text="Resume"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/resumeButton"
                android:layout_weight="0.25"
                android:backgroundTint="#d44f4f"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_marginRight="90dp"
                android:layout_marginLeft="90dp"/>

            <Button
                android:text="New Game"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/start_game"
                android:layout_weight="0.25"
                android:backgroundTint="#d44f4f"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_marginRight="90dp"
                android:layout_marginLeft="90dp"/>

            <Button
                android:text="Exit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/exitButton"
                android:layout_weight="0.25"
                android:backgroundTint="#d44f4f"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_marginRight="90dp"
                android:layout_marginLeft="90dp"/>
        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/sound_on_0"
            android:id="@+id/soundOnButton"
            android:layout_weight="0.25"
            android:background="@null" />
    </LinearLayout>

</RelativeLayout>


